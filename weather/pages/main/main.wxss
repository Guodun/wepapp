page{
    height: 100%;
}

.content{
    font-family: 微软雅黑,宋体;
    font-size: 14px;
    background-size: cover;
    height: 100%;
    width:100%;
    background-image: url("../asserts/img/bg.png");
    color: #FFFFFF;
}
.info{
    padding: 20px;
    background: #FFFFFF;
    background: rgba(0, 0, 0, 0.4);
    box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.5);
}
.today{
    padding-top: 50rpx;
    height: 35%;
}
.city{
    color: white;
    font-size: 10rpx;
    text-align: right;
    margin-right: 10rpx;
    margin-top: 10rpx;
}
.temp{
    font-size: 50px;
    text-align: center;
}
.weather{
    text-align: center;
    margin-bottom: 10rpx;
}
.tips{
    color:orange;
}
.title{
    height: 10%;
    width: 450rpx;
    margin-bottom: 20px;
    margin-top: 5px;
    border-radius: 10px;
    background: #FFFFFF;
    background: rgba(0,0,0, 0.3);
    box-shadow: 10px 10px 20px(0, 0, 0, 0.5); 
}
.title-info{
    padding-left: auto;
    font-size: 40px;
    text-align: center;
}
.future{
    display:flex;
    flex-direction: row;
    height: 40%;
    padding-left: 5rpx;
    background: #FFFFFF;
    background: rgba(0, 0, 0, 0.1);
    box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.5);
    text-align: center;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
}
.future-item{
    min-height: 100%;
    width: 165rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: solid 1px coral;
    border-radius: 10px;
    padding-top: 10rpx;
}
.future-item view{
    margin-top: 10px;
}